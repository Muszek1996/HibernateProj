<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernate.Entities.PlayersgamesEntity" table="playersgames" schema="steam">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="steamid">
            <column name="steamid" sql-type="bigint(20)"/>
        </property>
        <property name="appid">
            <column name="appid" sql-type="bigint(20)"/>
        </property>
    </class>
</hibernate-mapping>